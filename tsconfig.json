{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "bridge/*": ["bridge/*"]
    },
    "types": ["node", "jest"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.node.ts",
    "**/*.pw.tsx",
    "**/*.ts",
    "**/*.tsx",
    "decs.d.ts",
    "global.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules_linux",
    "./deploy/tools/envs-validator",
    "./deploy/tools/favicon-generator",
    "oasys-experiment",
    "./toolkit/package"
  ]
}
